<%= form_tag user_goals_path do %>
  <% @goal_list.each do |goal| %>
    <%= fields_for 'goal_list[]', goal do |p| %>

      <div class="field">
        <%= p.label :category %><br>
        <%= p.text_field :category %>
      </div>
      <div class="field">
        <%= p.label :amount %><br>
        <%= p.number_field :amount %>
      </div>

    <% end %>
  <% end %>
  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>
