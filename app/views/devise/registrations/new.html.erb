<div class="uk-container">

  <div class="uk-text-center uk-margin-xlarge-top">
    <div class="uk-margin">
      <%= image_tag 'logo.svg' %>
    </div>
    <div class="uk-margin-large">
      <h3 class="uk-heading-line uk-margin-remove">Ãšnete gratis</h3>
      <p class="uk-margin-remove">Gratis por siempre</p>
    </div>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="uk-margin">
      <%= f.label :email, class: 'uk-form-label' %>
      <div class="uk-form-controls">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "uk-input" %>
      </div>
    </div>

    <div class="uk-margin">
      <%= f.label :password, class: 'uk-form-label' %>
      <div class="uk-form-controls">
        <%= f.password_field :password, autocomplete: "new-password", class: "uk-input" %>
      </div>
    </div>

    <div class="uk-margin">
      <%= f.label :password_confirmation, class: 'uk-form-label' %><br />
      <div class="uk-form-controls">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "uk-input" %>
      </div>
    </div>

    <div class="uk-margin">
      <%= f.submit "Crear Cuenta", class: 'uk-button uk-button-primary uk-width-1-1' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
