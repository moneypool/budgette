<div class="uk-text-center uk-margin-medium-top">
  <div class="uk-margin-medium">
    <%= image_tag 'logo.svg' %>
  </div>
  <div class="uk-margin-small">
    <h3 class="uk-heading-line uk-margin-remove">Crea una cuenta</h3>
    <p class="uk-margin-remove">
      Desafía a tus amigos y motívate para mejorar
    </p>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="uk-margin">
    <%= f.label :name, class: 'uk-form-label' %>
    <div class="uk-form-controls">
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "uk-input" %>
    </div>
  </div>

  <div class="uk-margin">
    <%= f.label :email, class: 'uk-form-label' %>
    <div class="uk-form-controls">
      <%= f.email_field :email, autocomplete: "email", class: "uk-input" %>
    </div>
  </div>

  <div class="uk-margin">
    <%= f.label :password, class: 'uk-form-label' %>
    <div class="uk-form-controls">
      <%= f.password_field :password, autocomplete: "new-password", class: "uk-input" %>
    </div>
  </div>

  <div class="uk-margin">
    <%= f.label :password_confirmation, class: 'uk-form-label' %><br />
    <div class="uk-form-controls">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "uk-input" %>
    </div>
  </div>

  <div class="uk-margin">
    <%= f.submit "Crear Cuenta", class: 'uk-button uk-button-primary uk-width-1-1' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
