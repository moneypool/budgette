<div class="uk-text-center uk-margin-xlarge-top">
  <div class="uk-margin">
    <%= image_tag 'logo.svg' %>
  </div>
  <div class="uk-margin-large">
    <h3 class="uk-heading-line uk-margin-remove">Inicia sesión</h3>
    <p class="uk-margin-remove">Ingresa con tu correo y contraseña</p>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="uk-margin">
    <%= f.label :email, class: 'uk-form-label' %>
    <div class="uk-form-controls">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "uk-input" %>
    </div>
  </div>

  <div class="uk-margin">
    <%= f.label :password, class: 'uk-form-label' %>
    <div class="uk-form-controls">
      <%= f.password_field :password, autocomplete: "current-password", class: "uk-input" %>
    </div>
  </div>

  <div class="uk-margin">
    <%= f.submit "Iniciar Sesión", class: 'uk-button uk-button-primary uk-width-1-1' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
